{
  "name": "Python Multiple Versions",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "postCreateCommand": "bash .devcontainer/post-create.sh",  // Call a script
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python" // Recommended: The official Python extension
      ]
    }
  }
}
